#!/bin/sh
DIR=$(dirname $0)
BOOTSTRAP_JAVACC_JAR=$DIR/javacc.jar
JAVACC_JAR=$DIR/../javacc.jar
FREEMARKER_JAR=$DIR/freemarker.jar
#FREEMARKER_JAR=$DIR/minimal
PATH_SEP=":"

case $(uname) in CYGWIN*)
  BOOTSTRAP_JAVACC_JAR=$(cygpath -w $BOOTSTRAP_JAVACC_JAR)
  JAVACC_JAR=$(cygpath -w $JAVACC_JAR)
  FREEMARKER_JAR=$(cygpath -w $FREEMARKER_JAR)
  PATH_SEP=";";;	
esac


# If there is a generated javacc.jar in the base directory, use that, otherwise, use
# the bootstrap javacc.jar that is in the bin directory.

CLASSPATH="$JAVACC_JAR$PATH_SEP$BOOTSTRAP_JAVACC_JAR$PATH_SEP$FREEMARKER_JAR"
java -ea -classpath "$CLASSPATH" javacc.Main "$@"
