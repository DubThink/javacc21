<project name="javacc21" default="jar" basedir=".">
	
  <target name="init">
	<echo>Send any bug report to bugs@javacc.com and include the following information.</echo>
    <echo>Ant Version: ${ant.version}</echo>
	<echo>JDK Version: ${java.version}</echo>
	<echo>Operating System: ${os.name}</echo>
	<uptodate property="parser.uptodate"
                 targetfile="src/java/javacc/parser/JavaCCParser.java">
	 <srcfiles dir="src/grammars" includes="*.javacc"/>
	</uptodate>
  </target>

  <target name="clean">
 	<delete file="javacc.jar"/>
 	<delete dir="test.tmp"/>
 	<delete dir="build"/>
        <delete dir="examples/java/javagrammar"/>
        <delete dir="examples/freemarker/fel"/>
        <delete dir="examples/freemarker/ftl"/>
        <delete dir="src/java/javacc/parser"/>
  </target>


  <target name="parser-gen" depends="init" unless="parser.uptodate">
 	<java jar="bin/javacc.jar" fork="true">
 	   <arg value="src/grammars/JavaCC.javacc"/>
 	</java>
  </target>

<target name="compile" depends="parser-gen">
  	<mkdir dir="build"/>
    <javac srcdir="src/java" 
 	       destdir="build"
 	       deprecation="off"
 	       debug="on"
 	       optimize="off"
           target="1.8"
           source="1.8"
    	   classpath="src/java:bin/freemarker.jar"
           includeantruntime="yes"
    />
 </target>
 

  <target name='docs'>
    <ant antfile="build.xml" dir="src/docs"/>
  </target>

	
 <target name="test" depends="jar">
    <ant antfile="build.xml" dir="examples/java" target="clean"/>
    <ant antfile="build.xml" dir="examples/java" target="test"/>
    <ant antfile="build.xml" dir="examples/freemarker" target="clean"/>
    <ant antfile="build.xml" dir="examples/freemarker" target="test"/>
    <ant antfile="test.xml" target="all"  />
 </target>
	
 <target name="jar" depends="compile">
     <copy todir="build/javacc/output/java">
      <fileset dir="src/templates/java">
         <include name="*.ftl"/>
      </fileset>
    </copy>
    <jar jarfile="javacc.jar" 
    	 basedir="build" compress="true"
         manifest="src/java/jar-manifest.txt"/>
 </target>
	
</project>
