<?xml version='1.0' encoding='ISO-8859-1' ?>

<project name="Java Parser" default="compile">

<target name="clean">
   <delete dir="javagrammar"/>
   <delete file="JParse.class"/>
</target>

<target name="init">
   <uptodate property="javaparser.uptodate" srcfile="../../src/main/javacc/Java.javacc" targetfile="javagrammar/JavaParser.java"
/>
   <mkdir dir="javagrammar"/>
</target>

<target name="parser-gen" depends="init" unless="javaparser.uptodate">
  <java classpath="../../build:../../bin/javacc.jar:../../bin/freemarker.jar" classname="javacc.Main" failonerror="true">
    <arg value="-q"/>
    <arg value="-BASE_SRC_DIR=${basedir}/../../examples/java" />
    <arg value="-PARSER_PACKAGE=&quot;javagrammar&quot;" />
    <arg value="${basedir}/../../src/main/javacc/Java.javacc"/>
  </java>
</target>
 
 
<target name="compile" depends="init, parser-gen">
     <javac srcdir="."  failonerror="true"
      classpath="." debug="on" optimize="off" includeantruntime="no" />
</target>

<target name="test" depends="compile">
     <java fork="true" failonerror="true" classname="JParse">
         <arg value="javagrammar"/>
     </java>
     <echo>
        -------------------
        Okay, that seems okay. Now let's dump the parse tree for a single source file
        -------------------
     </echo>
     <java fork="true" failonerror="true" classname="JParse">
         <arg value="javagrammar/CompilationUnit.java"/>
     </java>
</target>

</project>
